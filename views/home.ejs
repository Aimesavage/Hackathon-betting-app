<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@200&family=Jockey+One&display=swap" rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@200&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/public/styles.css">
</head>
<body>
    <div class="font container-fluid navigation">

        <div class="row">
            <div class="col-6"><h1 style="display: inline;" class="brandname">CHAMPION'S CHOICE</h1></div>
            <div class="col-6"><div class="login_signin">
                <button class="btn btn-lg login_btn btn-light">Join</button> 
                <button class="btn btn-lg login_btn btn-light">Login</button>
            
                </div></div>
        </div>
        
            
            
    </div>
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class=" teams col-sm-2">
                    <div class="font"><h1>Teams</h1></div>
                    <div>
                        <p>USA</p>
                        <p>MEXICO</p>
                        <p>CANADA</p>
                        <p>FRANCE</p>
                        <p>SPAIN</p>
                        <p>PORTUGAL</p>
                        <p>ITALY</p>
                        <P>SWEDEN</p>
                        <p>MORROCO</p>
                        <p>ALGERIA</p>
                        <p>BRAZIL</p>
                        <p>ARGENTINA</p>
                        <p></p>
                        <p></p>
                    
                    </div>
                </div>
                
                       
                    <div class="col-sm-10">
                        <div class="row header font">
                            
                            <div class="col col-3"  onclick="showHome()"><h1 class="title_button">Home</h1></div>
                            <div class="col col-3"  onclick="showBet()"><h1 class="title_button">Bets</h1></div>
                            <div class="col col-3" onclick="showBracket()"><h1 class="title_button">Bracket</h1></div>
                            <div class="col" onclick="showLive()"><h1 class="title_button">Live</h1></div>
                            
                            
                        </div>
                        <div class="display homeDisplay" id="home">
                            <div class="heading">
                                <h4>FIFA WORLD</h4>
                                <h4>CUP 2026</h4>
                            </div>

                            <div class="row">
                                <div class="col hcol-4"><h5>country</h5></div>
                                <div class="col  col-2 empty"></div>
                                <div class="col col-3 "><h5>Probability</h5></div>
                                <div class="col price"><h5>Price</h5></div>
                            </div>

                            <div class="row cells">
                                <div class="col  col-2 flag"><img src="/public/brazil.png" alt="" class="img"></div>
                                <div class="col  col-4 country"><p>Brazil</p></div>
                                <div class="col col-3 probability"><p>100%</p></div>
                                <div class="col price"><p>$1.89</p></div>
                            </div>
                            
                            <div class="row cells">
                                <div class="  col-2 flag"><img src="/public/germany.webp" alt="" class="img"></div>
                                <div class="col  col-4 country"><p>Germany</p></div>
                                <div class="col  col-3 probability"><p>91%</p></div>
                                <div class="col  price"><p>$2.70</p></div>
                            </div>

                            <div class="row cells">
                                <div class="col  col-2 flag"><img src="/public/ar-flag.webp" alt="" class="img"></div>
                                <div class="col     col-4 country"><p>Argentina</p></div>
                                <div class="col  col-3 probability">82%</div>
                                <div class="col  price"><p>$5.89</p></div>
                            </div>

                            <div class="row cells">
                                <div class="col col-2 flag"><img src="/public/Flag_of_Italy.svg" alt="" class="img"></div>
                                <div class="col col-4 country"><p>Italy</p></div>
                                <div class="col col-3 probability"><p>82%</p></div>
                                <div class="col price"><p>$7.65</p></div>
                            </div>

                            <div class="row cells">
                                <div class="col col-2 flag"><img src="/public/Flag-Spain.webp" alt="" class="img"></div>
                                <div class="col col-4 country"><p>Spain</p></div>
                                <div class="col col-3 probability"><p>73%</p></div>
                                <div class="col price"><p>$9.70</p></div>
                            </div>
                        </div>

                        <div class="display betDisplay hide" id="bets">
                            <div class="heading">
                                <h4>FIFA WORLD</h4>
                                <h4>CUP 2026</h4>
                            </div>

                            <div>
                                <div class="message"><h4>No bet yet</h4></div>
                                <div class="betbtn">
                                <button class="btn btn-lg btn-light">Place a bet</button>
                            </div>
                            </div>

                        </div>
                        <div class="display bracketDisplay hide" id="bracket" >

                            <img src="/public/1200px-Flag_of_Brazil.svg.png" class="bracketflag bflag" alt="">
                            <img src="/public/ar-flag.webp" class="aflag bracketflag" alt="">
                            <img src="/public/Flag-Spain.webp" class="sflag bracketflag" alt="">
                            <img src="/public/germany.webp" class="gflag bracketflag" alt="">
                            <div class="bracketgame">

                               <img src="/public/Group 1.png" alt="" id="bracketGameID" srcset="">
                            </div>
                            <div class="btnplay">
                                <button class="btn btn-lg btn-light"> Play</button>
                            </div>

                        </div>
                        <div class="display hide liveDisplay" id="live" >
                            <div class="heading">
                                <h4>FIFA WORLD</h4>
                                <h4>CUP 2026</h4>
                            </div>

                            <div class="liveimgdiv">
                                <img class="liveimg" src="/public/live.png">
                            </div>

                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
        

    </div>
</body>
<script >

const home = document.getElementById("home")
const bets = document.getElementById("bets")
const bracket = document.getElementById("bracket")
const live = document.getElementById("live")

function showHome() {
    home.classList.remove("hide")
    bets.classList.add("hide")
    bracket.classList.add("hide")
    live.classList.add("hide")
    
}
window.onload()= showHome()
function showBet() {
    bets.classList.remove("hide")
    home.classList.add("hide")
    bracket.classList.add("hide")
    live.classList.add("hide")
    
}
function showBracket() {
    bracket.classList.remove("hide")
    home.classList.add("hide")
    bets.classList.add("hide")
    live.classList.add("hide")
    
}
function showLive() {
    live.classList.remove("hide")
    home.classList.add("hide")
    bracket.classList.add("hide")
    bets.classList.add("hide")
    
}
</script>
</html>